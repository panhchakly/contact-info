<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h5>Contact</h5>
        </div>
        <div class="card-body">
            {{!-- Contact Body --}}
        </div>
        <div class="card-footer">
            <form action="new-contact" method="post">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="First Name" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="lastname" placeholder="Last Name" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="email" placeholder="Email" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="phoneNumber" placeholder="Phone Number" class="form-control" autofocus>
                </div>
                <button class="btn btn-primary btn-block">Add</button>
            </form>
        </div>
    </div>
</div>